@model Time

<div class="modal fade">

    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="DeletePost">
                <input asp-for="TimeId" hidden />
                <div class="modal-header">
                    <h4 class="modal-title" id="deleteTimeLabel">Delete Time</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-8">
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Name"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="Name" disabled class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Surname"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="Surname" disabled class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="TimeValue"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="TimeValue" disabled class="form-control" />
                                </div>

                            </div>
                            <div class="form-group row">
                                <div class="col-8 offset-4 row">

                                    <div class="col">
                                        <input type="submit" class="btn btn-danger w-100" value="Delete" />
                                    </div>
                                    <div class="col">
                                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            @* Keep this empty *@
                        </div>
                    </div>
                </div>
                </form>
        </div>
    </div>


</div>